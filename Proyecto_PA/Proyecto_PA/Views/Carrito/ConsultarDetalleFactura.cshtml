@model List<Proyecto_PA.Entities.FacturasEnt>
@{
    ViewBag.Title = "ConsultarDetalleFactura";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalle de la factura # @Model.FirstOrDefault().ConMaestro</h4>

            @if (ViewBag.MensajeUsuario != null)
            {
                <div class="alert alert-info" role="alert" style="text-align:center">
                    @ViewBag.MensajeUsuario
                </div>
            }

            <br>

            @if (Model.Count() > 0)
            {

                <table id="tableData" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Cantidad</th>
                            <th>Precio X Und</th>
                            <th>Impuesto X Und</th>
                            <th>SubTotal</th>
                            <th>Impuestos</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:center">
                                <td>@item.Nombre</td>
                                <td>@item.CantidadCompra</td>
                                <td>@item.PrecioCompra.ToString("N2")</td>
                                <td>@item.Impuesto.ToString("N2")</td>
                                <td>@item.SubTotal.ToString("N2")</td>
                                <td>@item.ImpuestoTotal.ToString("N2")</td>
                                <td>@item.Total.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <div class="alert alert-info col-12" role="alert" style="text-align:center; margin-top:5%; font-size:18pt;">
                    No hay productos registrados en este momento
                </div>
            }

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script>
    $(document).ready(function () {
        $('#tableData').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            }
        });
    });</script>
