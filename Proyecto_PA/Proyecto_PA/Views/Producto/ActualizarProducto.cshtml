@model Proyecto_PA.Entities.ProductoEnt
@{
    ViewBag.Title = "ActualizarProducto";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <a href="@Url.Action("ConsultarProductos", "Producto")" class="btn btn-outline-secondary rounded-pill mb-3">
                    <i class="fa fa-arrow-left mr-2"></i> Volver
                </a>

                <h3 class="card-title text-left mb-3">Actualizar el Producto</h3>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-info" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("ActualizarProducto", "Producto", FormMethod.Post, new { @class = "pt-3", @enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.ConProducto)

                    <div class="form-group">
                        <label>Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Nombre",
                            @type = "text"
                        })
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control form-control-lg", @placeholder = "Descripción", @type = "text" })
                    </div>
                    <div class="form-group">
                        <label>Cantidad</label>
                        @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control form-control-lg", @placeholder = "Cantidad", @type = "number" })
                    </div>
                    <div class="form-group">
                        <label>Precio</label>
                        @Html.TextBoxFor(m => m.Precio, new { @class = "form-control form-control-lg", @placeholder = "Precio", @type = "number" })
                    </div>
                    <div class="form-group">
                        <label>Imagen</label>
                        <input type="file" class="form-control" id="ImgProducto" name="ImgProducto">
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn" value="Actualizar Producto">
                    </div>
                }

            </div>
        </div>
    </div>
</div>
