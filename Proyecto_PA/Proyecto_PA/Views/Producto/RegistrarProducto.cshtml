@model Proyecto_PA.Entities.ProductoEnt
@{
    ViewBag.Title = "RegistrarProducto";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/template/images/logo.svg" alt="logo">
                </div>
                <h3 class="card-title text-left mb-3">Información del Producto</h3>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-info" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("RegistrarProducto", "Producto", FormMethod.Post, new { @class = "pt-3",@enctype="multipart/form-data" }))
                {
                    <div class="form-group">
                        <label>Nombre</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Nombre" })
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Descripcion" })
                    </div>
                    <div class="form-group">
                        <label>Precio</label>
                        @Html.TextBoxFor(m => m.Precio, new { @class = "form-control form-control-lg", @type = "number", @placeholder = "Precio" })
                    </div>
                    <div class="form-group">
                        <label>Cantidad</label>
                        @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control form-control-lg", @type = "number", @placeholder = "Cantidad" })
                    </div>
                    <div class="form-group">
                        <label>Imagen</label>
                        <input type="file" id="ImgProdcuto" name="ImgProducto" class = "form-control form-control-lg">
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn" value="Registrar Producto">
                    </div>
                }

            </div>
        </div>
    </div>
</div>
