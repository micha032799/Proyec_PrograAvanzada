
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Electro</title>

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/template/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/template/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/template/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/template/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/template/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/template/css/style.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

</head>
<body>
    <header>
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +506 86077091</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> Electro@gmail.com</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> Sabana Sur</a></li>
                </ul>

                <ul class="header-links pull-right">

                    @if (Session["ConUsuario"] != null)
                    {
                        <li><a href="@Url.Action("CerrarSesion", "Login")"><i class="fa fa-sign-out"></i> Cerrar Sesión</a></li>

                    }
                    else
                    {
                        <li><a href="@Url.Action("IniciarSesion", "Login")"><i class="fa fa-user-o"></i> Iniciar Sesión</a></li>
                        <li><a href="@Url.Action("RegistrarCuenta","Login")"><i class="fa fa-user-o"></i> Registarse</a></li>
                    }

                   
                    @if (Session["Rol"] != null && Session["Rol"].ToString().Equals("1"))
                    {
                        <li><a href="@Url.Action("ConsultaUsuarios","Usuario")"><i class="fa fa-cog"></i> Mantenimiento Usuarios</a></li>
                        <li><a href="@Url.Action("ConsultarProductos","Producto")"><i class="fa fa-cog"></i>Mantenimiento Productos</a></li>
                    }

                </ul>
            </div>
        </div>
        <div id="header">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="@Url.Action("Index","Login")" class="logo">
                                <img src="~/template/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="header-ctn">

                            @if (Session["Nombre"] != null)
                            {
                                <div>
                                    <a href="@Url.Action("PerfilUsuario","Usuario")">
                                        <i class="fa fa-user-o"></i>
                                        <span>Perfil usuario</span>
                                    </a>
                                </div>
                                <div class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                        <a class="nav-link" href="@Url.Action("ConsultarCarrito", "Carrito")">
                                            <i class="fa fa-shopping-cart"></i>
                                            <span>Carrito</span>
                                        </a>
                                    </a>
                                 </div>
                                <div>
                                    <a href="@Url.Action("ConsultarFacturas", "Carrito")">
                                        <i class="fa fa fa-list"></i>
                                        <span class="menu-title">Facturas</span>
                                    </a>
                                </div>
                            }
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <nav id="navigation">
        <div class="container">
            <div id="responsive-nav">
                <ul class="main-nav nav navbar-nav">
                    <li class="active"><a href="@Url.Action("Index","Login")">Pantalla Principal</a></li>
                       
                    </ul>
                <ul class="additional-info">
                    <li class="text-right">
                        @if (Session["ConUsuario"] != null)
                        {
                            @Session["Nombre"]
                        }

                        @if (Session["ConUsuario"] != null)
                        {
                            <div>
                                <i class="fa fa-tag"></i> @Session["Cant"].ToString() &nbsp;&nbsp;&nbsp;&nbsp;
                                <i class="fa fa-credit-card"></i> @decimal.Parse(Session["Subt"].ToString()).ToString("N2") + iva
                            </div>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   
    <div class="section">
        <div class="container">
            <div class="row">
                @RenderBody()

            </div>
        </div>
    </div>
   
    
    <footer id="footer">
        <div class="section">
            <div class="container">
                <div>
                    <div class="row">
                        <div class="col-md-3 col-xs-6">
                            <div class="footer">
                                <h3 class="footer-title">Sobre Nosotros</h3>
                                <ul class="footer-links">
                                    <li><a href="#"><i class="fa fa-map-marker"></i> En frente del Cotepecos Sabana Sur, San José, Costa Rica</a></li>
                                    <li><a href="#"><i class="fa fa-phone"></i>+506 86077091</a></li>
                                    <li><a href="#"><i class="fa fa-envelope-o"></i>Electro@gmail.com</a></li>
                                </ul>
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
        <div id="bottom-footer" class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © @DateTime.Now.Year. Derechos Reservados.</span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/template/js/jquery.min.js"></script>
    <script src="~/template/js/bootstrap.min.js"></script>
    <script src="~/template/js/slick.min.js"></script>
    <script src="~/template/js/nouislider.min.js"></script>
    <script src="~/template/js/jquery.zoom.min.js"></script>
    <script src="~/template/js/main.js"></script>

    <script src="https://code.jquerry.com/jquery-3.7.0.js"></script>
    <script>
        $(document).ready(function () {
            document.getElementById("main-panel").style.width = "100%";
            });
    </script>

</body>
</html>
